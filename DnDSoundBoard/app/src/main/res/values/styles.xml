<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainDark</item>
        <item name="android:colorPrimaryDark">@color/mainDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:windowAnimationStyle">@style/SlideInAnimation</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/oil</item>
        <item name="minHeight">@dimen/text_field_height</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconTint">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/mainDark</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/oil</item>
    </style>

    <style name="TextViewStyleLarge" parent="TextViewStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStyleTitle" parent="TextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/jet</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewStyleTitleLarge" parent="TextViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/jet</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewStyleTitleLight" parent="TextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewStyleSubtitle" parent="TextViewStyle">
        <item name="android:textColor">@color/oil</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cornerRadius">@dimen/rounded_corner_radius</item>
    </style>

    <style name="DialogButtonStyle" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="textAllCaps">true</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ButtonStyleBorderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="ButtonStyleBordered" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconGravity">textStart</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="ButtonStyleFilled" parent="Widget.MaterialComponents.Button.Icon">
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <declare-styleable name="ModalSearch">
        <attr name="hintText" format="string" />
    </declare-styleable>

    <style name="SlideInAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>
</resources>